{
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module",
      "ecmaFeatures": {
        "forOf": true,
        "jsx": true,
        "es6": true,
        "experimentalObjectRestSpread" : true
      }
    },
    "env": {
      "browser": true,
      "es6": true,
      "mocha": true
    },
    "rules": {
      "camelcase": ["error", { "properties": "never" }],
      "comma-dangle": ["error", "always-multiline"],
      "eqeqeq": 2, // requires === and !===
      "jsx-quotes": ["error", "prefer-double"],
      "quotes": [2, "single", { "allowTemplateLiterals": true }],
      "no-eval": 2,
      "no-irregular-whitespace": 2,
      "no-trailing-spaces": 2,
      "no-unsafe-finally": 2,
      "no-console": 2,
      "no-const-assign": 2,
      "prefer-const": 2,
      "no-undef": 2,
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_", "varsIgnorePattern": "(^_|React)" } ],
      "semi": ["error", "always"],
      "eol-last": 1,
      "react/jsx-uses-vars": 1
    },
    "plugins": [
      "react",
      "import"
    ],
    "globals": {
      "__DEVSERVER__": true,
      "__DEVCLIENT__": true,
      "__dirname": true,
      "process": true,
      "global": true,
      "expect": true,
      "module": true,
      "require": true,
      "describe": true,
      "ipcRenderer": true
    }
}
